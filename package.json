{
  "name": "chatql",
  "version": "0.0.1",
  "description": "Easy to use chat api for graphql",
  "author": "Rex Raphael",
  "license": "MIT",
  "scripts": {
    "format": "prettier --write \"**/*.ts\"",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "nodemon",
    "prestart:prod": "rm -rf dist && tsc",
    "start:prod": "node dist/main.js",
    "start:hmr": "node dist/server",
    "test": "jest",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "webpack": "webpack --config webpack.config.js"
  },
  "dependencies": {
    "@nestjs/common": "5.3.7",
    "@nestjs/core": "5.3.7",
    "@nestjs/graphql": "5.3.1",
    "@nestjs/jwt": "0.1.3",
    "@nestjs/passport": "5.1.0",
    "@nestjs/swagger": "2.5.1",
    "@nestjs/websockets": "5.3.7",
    "@types/joi": "13.4.5",
    "apollo-server-express": "^2.0.7",
    "arangojs": "6.6.0",
    "cache-manager": "2.9.0",
    "class-validator": "0.9.1",
    "compression": "1.7.3",
    "csurf": "1.9.0",
    "dotenv": "6.0.0",
    "express-rate-limit": "3.1.1",
    "fastify-formbody": "2.0.1",
    "graphql": "14.0.2",
    "graphql-tools": "3.1.1",
    "graphql-type-json": "0.2.1",
    "hbs": "4.0.1",
    "helmet": "3.13.0",
    "joi": "13.6.0",
    "mqtt": "2.18.8",
    "passport": "^0.4.0",
    "passport-http-bearer": "1.0.1",
    "passport-jwt": "4.0.0",
    "reflect-metadata": "0.1.12",
    "rxjs": "6.3.2",
    "typescript": "2.9.2"
  },
  "devDependencies": {
    "@nestjs/testing": "5.3.1",
    "@types/express": "4.16.0",
    "@types/jest": "21.1.10",
    "@types/node": "9.6.31",
    "@types/supertest": "2.0.5",
    "jest": "21.2.1",
    "nodemon": "1.18.4",
    "prettier": "1.14.2",
    "supertest": "3.1.0",
    "ts-jest": "21.2.4",
    "ts-loader": "4.5.0",
    "ts-node": "4.1.0",
    "tsconfig-paths": "3.5.0",
    "tslint": "5.3.2",
    "webpack": "4.17.2",
    "webpack-cli": "2.1.5",
    "webpack-node-externals": "1.7.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage"
  }
}
